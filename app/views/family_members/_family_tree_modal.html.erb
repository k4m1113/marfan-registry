<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <%= f.fields_for :family_members, @nested_scope.family_members.build, action: action do |ff| %>
      <%= ff.hidden_field :topic_id, value: topic.id %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"><%= "#{action.capitalize} #{topic.name}" %></h4>
      </div>
      <div class="modal-body">
        <%= render 'family_members/family_member_form_body', f: ff, topic: topic %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= ff.submit "#{action.capitalize} Relationship", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
